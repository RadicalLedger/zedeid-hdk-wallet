{
    "name": "did-hd-wallet",
    "version": "2.0.0",
    "description": "Package to generate decentralized IDs deterministically",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "prebuild": "tsc",
        "build:obf": "npm run obf",
        "build": "npm run prebuild",
        "obf": "node obfuscate.js",
        "test": "jest",
        "coverage": "jest --coverage",
        "lint": "eslint . --ext .ts",
        "pretty": "prettier --write \"./**/*.{ts,tsx,js,jsx,json,scss,css}\"",
        "configure-husky": "npx husky install && npx husky add .husky/pre-commit \"npx --no-install lint-staged\""
    },
    "lint-staged": {
        "**/*.{ts,js,json}": [
            "prettier --write ."
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "author": "Radical Ledger Technologies",
    "license": "ISC",
    "devDependencies": {
        "@types/jest": "^26.0.20",
        "@typescript-eslint/eslint-plugin": "^4.15.1",
        "@typescript-eslint/parser": "^4.15.1",
        "eslint": "^7.20.0",
        "husky": "^8.0.3",
        "javascript-obfuscator": "^2.10.7",
        "jest": "^26.6.3",
        "lint-staged": "^13.2.2",
        "prettier": "^2.8.8",
        "ts-jest": "^26.5.0",
        "ts-node": "^9.1.1",
        "typescript": "^4.1.3"
    },
    "dependencies": {
        "@transmute/ed25519-signature-2018": "^0.7.0-unstable.80",
        "base-58": "^0.0.1",
        "bip32": "2.0.6",
        "bip39": "^3.0.2",
        "buffer": "^6.0.3",
        "tiny-secp256k1": "^2.2.1",
        "web3": "^1.3.3"
    },
    "files": [
        "dist",
        "package.json",
        "Readme.md"
    ]
}
